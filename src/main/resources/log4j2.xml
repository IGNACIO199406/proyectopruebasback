<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<RollingFile name="fileAppender"
			fileName="/home/webapp/Proyectos/prueba/prueba.log"
			filePattern="/home/webapp/Proyectos/prueba/prueba.%d{yyyy-MM-dd}.log" ignoreExceptions="false">
			<PatternLayout
				pattern="%m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="30MB" />
			</Policies>
			<DefaultRolloverStrategy max="90" />
		</RollingFile>
		<Console name="console" target="SYSTEM_OUT" ignoreExceptions="false">
			<PatternLayout pattern="%d{yyyy-MMM-dd HH:mm:ss,SSS} %p - %m%n" /> 
		</Console>
	</Appenders>
	<Loggers>
		<root level="debug">
			<appender-ref ref="fileAppender" level="info" />
			<appender-ref ref="console" level="error" />
		</root>
	</Loggers>
</Configuration>